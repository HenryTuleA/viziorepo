    <div id ="mainContent">
     <form action="https://forceunleashed.s3-us-west-2.amazonaws.com/"  method="post" enctype="multipart/form-data" id="uploadForm">
        <input type="hidden"  name="key"  id="key" /> 
        <input type="hidden" name="AWSAccessKeyId" value="{!awsKeySet.AWS_AccessKey_Id__c}" /> 
        <input type="hidden"  name="policy" value="{!policy}" /> 
        <input type="hidden"  name="signature" value="{!signedPolicy}" /> 
        <input type="hidden"  name="acl" value="{!acessType}" /> 
        <input type="hidden"  name="Content-Type" value="{!Content_Type}" /> 
        <input type="hidden" name="success_action_redirect" value="{!ForRedirect}" />
         
        <h4 class="fileToUpload">Select a File to Upload</h4><br />
        <div class="row">
              <input type="file" size="50" name="file" id="file"   /> <!-- onchange="fileSelected();" -->
        </div>
        
        <div id="fileName"></div>
        <div id="fileSize"></div>
        <div id="fileType"></div>
        
        <div class="row">
          <input type="submit" value="Upload"  id="btn_submit" />
          <input type="button" value="Back to CaseNumber {!caseNumber}"  id="cancel_submit"/>
        </div>
       <div id="progressNumber"></div>
       
    </form> 
    
