                $("#file").click(function(event){
                      $('#file').change(function() {
                          if($(this).val() != '') {
                               $('#btn_submit').prop('disabled', false);
                            }
                      });       
                });
                
                
                $("#btn_submit").click(function(event){
                    //alert(1);
                        event.preventDefault();
                      var _file;
              
                     _file = $("#file").val().replace(/.+[\\\/]/, "");
